<!DOCTYPE html>
<html>
  <head>
    <title>Add New Employee</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">
      <h3><a href="/employees" class="btn-primary">Employee List</a></h3>
      <h1>Add New Employee</h1>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="message error">
          <p><%= error %></p>
        </div>
      <% } %>
      
      <form action="/employees/save" method="post">
        <table>
          <tbody>
            <tr>
              <td><label for="name">Full Name:</label></td>
              <td><input type="text" name="name" id="name" placeholder="Enter employee's full name" required /></td>
            </tr>
            <tr>
              <td><label for="address">Address:</label></td>
              <td><textarea name="address" id="address" placeholder="Enter employee's address" required></textarea></td>
            </tr>
            <tr>
              <td><label for="position">Position:</label></td>
              <td><input type="text" name="position" id="position" placeholder="Enter job position" required /></td>
            </tr>
            <tr>
              <td><label for="salary">Annual Salary:</label></td>
              <td><input type="number" name="salary" id="salary" placeholder="Enter annual salary" min="0" step="1000" required /></td>
            </tr>
            <tr>
              <td colspan="2">
                <button type="submit" class="btn-primary">Save Employee</button>
                <a href="/employees" class="cancel-btn" style="margin-left: 10px;">Cancel</a>
              </td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>